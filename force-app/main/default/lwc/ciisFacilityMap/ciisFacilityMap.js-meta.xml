<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig
            targets="lightning__FlowScreen"
        >
            <property
                name="latitude"
                type="String"
                label="Latitude"
            />
            <property
                name="longitude"
                type="String"
                label="Longitude"
            />
            <property
                name="required"
                type="Boolean"
                label="Required"
                description="Set to true if you want to require the user to enter a lat/long value."
            />
            <property
                name="readOnly"
                type="Boolean"
                label="Read Only"
                description="Set to true if you want to provide lat/long values and only see the map. If false, the component will have a lat/long input field and a map."
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>